{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "buildAptPackages": ["build-essential", "git"],
  "packages": {
    "python": "3.11"
  },
  "caches": {
    "pip-cache": {
      "directory": "~/.cache/pip",
      "type": "shared"
    }
  },
  "steps": {
    "install": {
      "commands": [
        "pip install --upgrade pip",
        "pip install -r requirements.txt"
      ],
      "caches": ["pip-cache"]
    },
    "build": {
      "inputs": [
        {
          "step": "install"
        }
      ],
      "commands": [
        "python setup.py build",
        "python -m compileall ."
      ]
    }
  },
  "deploy": {
    "base": {
      "image": "python:3.11-slim"
    },
    "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT",
    "variables": {
      "FLASK_ENV": "production",
      "PORT": "5000"
    },
    "inputs": [
      {
        "step": "build",
        "include": ["."]
      }
    ],
    "aptPackages": ["libpq-dev", "gcc"]
  }
}
